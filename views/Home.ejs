<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crud app</title>
    <link rel="stylesheet" href="/contacts.home.css">
    <!-- CDN Links -->
     <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/css/bootstrap.min.css">
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
     <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css/">
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
</head>
<body>
<div class="container d-flex justify-content-center mt-5">
    <div class="row mx-auto  middle">
        <div class="col-md-offset-1 col-md-10">
            <div class="panel">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col col-sm-3 col-xs-12">
                            <h4 class="title">All <span>Contacts</span></h4>
                        </div>
                        <div class="col-sm-9 col-xs-12 text-right">
                            <div class="btn_group">
                                <input type="text" class="form-control" placeholder="Search">
                                <a href="" onclick="window.print()"><button class="btn btn-default" title="Print"><i class="fa fa-print"></i></button></a>
                                <a href="" onclick="window.Location.reload()"><button class="btn btn-default" title="Reload"><i class="fa fa-sync-alt"></i></button></a>
                                <a href="/insert"><button class="btn btn-default px-4" title="Add"><i class="fa fa-plus-circle pr-2"></i>insert</button></a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-body table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Full Name</th>
                                <th>Contact</th>
                                <th>Email id</th>
                                <th>City</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% let sno = 1 %>
                            <% contacts.forEach((contact) => { %>
                            <tr>
                                <td><%= sno++ %></td>
                                <td><%= contact.name %></td>
                                <td><%= contact.phone %></td>
                                <td><%= contact.email %></td>
                                <td><%= contact.city %></td>
                                <td>
                                    <ul class="action-list">
                                        <li><a href="/contactview/<%= contact._id %>" data-tip="view"><i class="fa-solid fa-eye"></i></a></li>
                                        <li><a href="/updateContact/<%= contact._id %>" data-tip="edit"><i class="fa fa-edit"></i></a></li>
                                        <li><a href="/deleteContact/<%= contact._id %>" data-tip="delete"><i class="fa fa-trash"></i></a></li>
                                    </ul>
                                </td>
                            </tr>
                            <% }) %>
                            <!--  -->
                        </tbody>
                    </table>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col col-sm-6 col-xs-6">showing <b>5</b> out of <b>20</b> entries</div>
                        <div class="col-sm-6 col-xs-6">
                            <ul class="pagination hidden-xs pull-right">
                                <li><a href="#"><</a></li>
                                <li class="active"><a href="#">1</a></li>
                                <li><a href="#">2</a></li>
                                <li><a href="#">3</a></li>
                                <li><a href="#">4</a></li>
                                <li><a href="#">5</a></li>
                                <li><a href="#">></a></li>
                            </ul>
                            <!-- <ul class="pagination visible-xs pull-right">
                                <li><a href="#"><</a></li>
                                <li><a href="#">></a></li>
                            </ul> -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>